{
  "$schema": "./schemas/tsconfig.schema.json",
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "allowJs": true,
    "checkJs": true,
    "moduleResolution": "nodenext",
    "declaration": true,
    "declarationDir": "./out/types",
    "skipLibCheck": true /* 跳过对所有 .d.ts 文件进行类型检查。 */,
    "resolveJsonModule": true /* 启用导入 .json 文件。 */,
    "outDir": "./out",
    "sourceMap": false,
    "strict": true,
    "baseUrl": ".",
    // "rootDir": "./src",
    "paths": {
      "@/*": ["./src/*"]
    },
    // "types": ["./types/global.d.ts"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": ["node_modules/**/*", "templates/**/*", "drop/**/*", "test/*", "examples"],
  "include": ["src/**/*", "./types/global.d.ts"]
}
